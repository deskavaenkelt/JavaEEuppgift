<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="VaderAktivitetPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/MySqVAlDS</jta-data-source>
        <class>se.theflow.vaderaktivitet.models.Activity</class>
        <class>se.theflow.vaderaktivitet.models.AktivitetVader</class>
        <class>se.theflow.vaderaktivitet.models.PlatsAktivitet</class>
        <class>se.theflow.vaderaktivitet.models.Plats</class>
        <class>se.theflow.vaderaktivitet.models.WeatherOptimal</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
